<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
	"http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>
	<!-- 指定由Spring负责Action对象的创建 -->
	<constant name="struts.objectFaction" value="spring"></constant>
	<!-- 所有匹配*.action的请求为string2处理 -->
	<constant name="struts.action.extension" value="action"></constant>
	<!-- 是否启用开发模式 -->
	<constant name="struts.devMode" value="true"></constant>
	<!-- struts配置文件修改后，是否重新加载 -->
	<constant name="struts.configuration.xml.reload" value="true"></constant>
	<!-- 设置浏览器是否缓存静态内容 -->
	<constant name="struts.serve.static.browserCache" value="false"></constant>
	<!-- 请求参数的编码方式 -->
	<constant name="struts.18n.encoding" value="utf-8"></constant>
	<!-- 每次HTTP请求系统都重新加载资源文件，有助于开发 -->
	<constant name="struts.18n.reload" value="true"></constant>
	<!-- 文件上传最大值 
	<constant name="struts.multipart.maxSize" value="104857600"></constant>-->
	<!-- 让struts2支持动态文件调用 --> 
	<constant name="struts.enable.DynamicMethodInvocation" value="true"></constant>
	<!-- Action名称中是否可以使用斜线 -->
	<constant name="struts.enable.SlashesInActionNames" value="false"></constant>
	<!-- 允许标签中使用表达式语法 -->
	<constant name="struts.tag.altSyntax" value="true"></constant>
	<!-- 对于WebLogic,Orion,OC4J时，此属性应该设置成true -->
	<constant name="struts.dispatcher.parametersWorkaround" value="false"></constant>

    <package name="basePackage" extends="struts-default">
    
    </package>

</struts>
